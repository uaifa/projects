<!doctype html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Node</title>

    <link rel="shortcut icon" type="images/ico" href="/img/favicon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">

    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">


    <link rel="stylesheet" href="/css/app.css">

    <style type="text/tailwindcss">
        @layer utilities { .content-auto { content-visibility: auto; } }
    </style>
</head>

<body>
    <nav class="container mx-auto flex items-center justify-between py-4">
        <div class="">
            <a href="/">
                <img src="/img/logo.png" alt="logo">
            </a>
        </div>
        <div class="">
            <ul class="flex items-center">
                <li class="ml-6">
                    <a href="#">Menu</a>
                </li>
                <li class="ml-6">
                    <a href="#">Offers</a>
                </li>
                <% if(user){ %>
                    <li class="ml-6">
                        <a onclick="document.getElementById('logout').submit()" href="#!">Logout</a>
                        <form id="logout" action="/logout" method="post">
                        </form>
                    </li>
                    <% }else{ %>
                        <li class="ml-6">
                            <a href="/register">Register</a>
                        </li>
                        <li class="ml-6">
                            <a href="/login">Login</a>
                        </li>
                        <% } %>
                            <li class="ml-6">
                                <a href="/cart" class="inline-block px-4 py-2 rounded-full flex items-center">
                                    <span id="cart_counter" class="text-white font-bold pr-2"><%= session.cart ? session.cart.totalQty : '' %></span>
                                    <img src="/img/cart.png" alt="cart">
                                </a>
                            </li>
            </ul>
        </div>
    </nav>

    <%- body %>

        <footer>

        </footer>

        <script src="/socket.io/socket.io.js"></script>
        <script src="/js/app.js"></script>
</body>

</html>